
<% if user_signed_in?%>
	<%= simple_form_for @item do |f| %>
	  <%= f.input :title, label: "Item" %>
	  <%= f.input :description %>
	  <%= f.input :category ,
	  :collection => Category.where(:user_id => current_user.id),
	  :value_method => :name,
	  :include_blank => false %>
	  <%= f.button :submit %>
	<% end %>

<%else%>

	<%= render 'layouts/static_home_page'%>
<%end%> 


 