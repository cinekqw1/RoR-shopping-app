


<%if user_signed_in? %>		

<div class="col-md-5 col-md-offset-3">		
	
	<% @items.each do |item|%>

		<% if item.completed?%>

			

			<div class="row item">

				<div class="col-md-8">

					<h2 style="opacity: 0.5;"><strike><%= link_to item.title, item%></strike></h2>
					<p style="opacity: 0.5;"><%= item.description %></p>
					<p><i>Completed <%= time_ago_in_words(item.completed_at)%> ago </i></p>

				</div>
				<div class="col-md-4">
					<%= link_to complete_item_path(item), method: :patch do %>

						<i class="fa fa-lg fa-check"></i>
					<%end%>
				
					<i>	</i>
					<%= link_to item_path(item), method: :delete, data: {confirm: "Are you sure?"} do %>

						<i class="fa fa-lg fa-trash"></i>
					<%end%>
				</div>
			</div>
		<%else%>

			<div class="row item">
				<div class="col-md-8">
					<h2><%= link_to item.title, item%></h2>
					<p><%= item.description %></p>
					<p><i>Created at <%= time_ago_in_words(item.created_at)%> ago </i></p>
				</div>
				<div class="col-md-4">
					<%= link_to complete_item_path(item), method: :patch do %>

						<i class="fa fa-lg fa-check"></i>
					<%end%>
				
					<%= link_to item_path(item), method: :delete, data: {confirm: "Are you sure?"} do %>

					<i class="fa fa-lg fa-trash"></i>
					<%end%>
				</div>

			</div>
		<%end%>

	<%end%>
</div>

<%else%>

	<%= render 'layouts/static_home_page'%>
<%end%>


